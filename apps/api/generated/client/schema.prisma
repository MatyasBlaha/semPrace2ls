generator client {
  provider = "prisma-client-js"
  output   = "../generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  deletedAt DateTime @default(now())

  owners    Owner[]
  UserRole  UserRole?
  Employees Employee[]
}

model Owner {
  id          String   @id @default(uuid())
  name        String
  description String
  createdAt   DateTime @default(now())
  deletedAt   DateTime @default(now())

  UserOwner   User   @relation(fields: [UserOwnerId], references: [id])
  UserOwnerId String

  Employees Employee[]
}

model UserRole {
  id   String @id @default(uuid())
  role Role   @default(USER)

  User   User   @relation(fields: [UserId], references: [id])
  UserId String @unique
}

enum Role {
  SUPERADMIN
  ADMIN
  USER
}

model Employee {
  id          String @id @default(uuid())
  name        String
  phoneNumber String
  email       String

  Owner    Owner  @relation(fields: [OwnerId], references: [id])
  OwnerId  String
  Branch   Branch @relation(fields: [BranchId], references: [id])
  BranchId String
  User     User   @relation(fields: [UserId], references: [id])
  UserId   String
}

model Branch {
  id       String     @id @default(uuid())
  name     String
  location String
  type     BranchType @default(MARKET)

  Employees Employee[]
}

enum BranchType {
  OFFICCE
  MARKET
}
